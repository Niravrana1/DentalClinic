                            alert(data.message);
                            if (data.message == 'Appointment Booked Successfully') {
                                window.location.reload();
                            }
                        },
                        error: function () {
                            alert('Error Occured! Try Again');
                        },

                    });
                }
             else {
                 alert("#txtDate")
                 alert("#txtTime")
                 alert("#selectdoctor")
                    alert('Please Fill All Fields');
                }


        });

    </script>


