@model IEnumerable<DentalPatientClinicApplication.Models.Appointment>

@{
    ViewBag.Title = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container-fluid">

    <ul class="nav nav-tabs ">
        <li class="nav-item"><a class="nav-link" href="~/patient/_MyAccount">Account Information</a></li>
        <li class="nav-item"><a class="nav-link" href="~/patient/_ManageProfile">Manage Profile</a></li>
        <li class="nav-item"><a class="nav-link active" href="~/patient/_Appointments">Manage Appointment</a></li>
        <li class="nav-item"><a class="nav-link" href="~/patient/">Make Payment</a></li>
    </ul>

</div>
<div class="container-fluid">
    <table class="table table-striped table-hover ">



        <tr>
            <th>Name</th>
            <th>Appointment Date</th>
            <th>Appointment Time</th>
            <th>Doctor Name</th>
            <th>Reason for appointment</th>
            <th>Appointment Status</th>
            <th>Action</th>
        </tr>



        @foreach (var a in Model)
        {
            <tr class="info">
                <td>@a.PatientName</td>
                <td>@a.AppointmentDate</td>
                <td>@a.AppointmentTime</td>
                <td>@a.DoctorName</td>
                <td>@a.Reason</td>
                <td>@a.AppointmentStatus</td>
                <td>@Html.ActionLink("Edit", "Editappointment", "Patient", new { id = a.AppointmentId }, null)</td>
                <td>@Html.ActionLink("Delete", "Deleteappointment", "Patient", new { id = a.AppointmentId }, null)</td>
            </tr>
        }

    </table>

</div>




