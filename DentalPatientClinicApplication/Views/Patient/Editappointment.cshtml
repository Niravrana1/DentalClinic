@model DentalPatientClinicApplication.Models.Viewmodel.Appointmentview
@{
    ViewBag.Title = "Editappointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Editappointment</h2>
<hr />
@using (Html.BeginForm("EditAppointment", "Patient", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal col-md-5">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.PatientName)

            @*@Html.TextBox("Patientname", (string)ViewBag.Firstname + " " + (string)ViewBag.Lastname, new { @class = "form-control", placeholder = "Name" })*@
            @Html.TextBoxFor(m => m.PatientName, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.PatientName)

        </div>
        <div class="form-group">
          
            @Html.DropDownListFor(m => m.Did, new SelectList(ViewBag.doctorlist, "DoctorId", "DoctorName"), "--Select Doctor--", htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AppointmentDate)

            @Html.TextBoxFor(m =>  m.AppointmentDate, new {@class="form-control" })
            @Html.ValidationMessageFor(m => m.AppointmentDate)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AppointmentTime)

            @Html.DropDownListFor(m => m.AppointmentTime, new List<SelectListItem>{
                new SelectListItem{ Text="12:00" , Value="12:00"},
                new SelectListItem{ Text="02:00" , Value="02:00"},
                new SelectListItem{ Text="04:00" , Value="04:00"},
               },"--Select Time--",new {@class="form-control" })

            @Html.ValidationMessageFor(m => m.AppointmentTime)

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Reason)

            @Html.TextAreaFor(m => m.Reason, new { @class = "form-control", placeholder = "Reason.." })
            @Html.ValidationMessageFor(m => m.Reason)

        </div>
        <button type="Submit" class="btn btn-primary">Save</button>
    </div>
    
}

